[LinkFolder_create]
; create an shortcut to the installed exe on AllUsers desktop:
set_basefolder common_desktopdirectory
set_subfolder ""
set_link
       name: $ProductName$
       target: $PathToExe$
end_link

[Linkfolder_delete]
set_basefolder common_desktopdirectory
set_subfolder ""
delete_element $ProductName$